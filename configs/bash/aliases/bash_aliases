# Bash aliases
alias append="source ~/scripts/bashscripts/remote_testing_appliance/./append.sh" # Save the last command to a file with a timestamp for logging purposes
alias apt-search="apt-cache search" # Quicker apt searching
alias aptfreeup='apt --purge autoremove' # Purge unnecessary packages
alias asearch="apt-cache search" # Search for packages
alias awkspaces="/root/scripts/bashscripts/text_formatting/awk_spaces.sh" # Remove extraneous spaces and tabs
alias backtothefuture='git reset --hard HEAD@{1}' # Reset to an earlier state of the repository
alias bd='read -p "[*] Enter content to Base64 Decode: " material; echo "$material" | base64 -d 2> /dev/null' # Quickly decode base64 content
alias convert_html="/root/scripts/bashscripts/text_formatting/text_to_html.sh" # Convert a text file to an html compatible email format.
alias domaininfo="dig -t any" # Domain reconaissance
alias expandip='for i in $(cat targets.ip); do echo "[*] Expanding $i"; prips $i 2> /dev/null; if $(test $? -ne 0); then echo "[*] Error!"; fi; done'
alias firefox='firejail /usr/bin/firefox &' # Sandbox firefox
alias freespace='df -a / -H' # View storage information
alias getspf='dig -t txt +short' # Quickly retrieve SPF records for domains
alias grep="grep -i" # Case insensitive grep by default
alias grepip="grep -E '[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}'" # Use grep to find IP addresses
alias ipinfo="read -p '[*] Paste an IP: ' ip; curl ipinfo.io/$ip" # Quickly view information about an IP using the ipinfo.io service
alias kali="/root/scripts/bashscripts/docker/kali/kali.sh" # Automatically pop into a kali docker image
alias l=ls # When you type too fast but still want commands to work
alias lowtoup="tr '[:lower:]' '[:upper:]'" # Converts text to uppercase
alias ls="ls -h --color=auto" # Shows file size in human readable format rather than bytes and with colors
alias msfconsole="service postgresql start && msfconsole" # Properly start Metasploit
alias netmon="watch -d -n 0.5 ifconfig eth0" # Monitor bandwidth usage and network status
alias networkfix=~/scripts/bashscripts/remote_testing_appliance/networkfix.sh # The Kitchen Sink of network fixes
alias ngrok="/root/scripts/ngrok/./ngrok" # Poke a network hole and host a local application on the Internet
alias ninjakill="xargs | kill 2>1 /dev/null" # Kill those pesky processes
alias noemptylines="sed '/^\s*$/d'" # Remove any empty lines from a text file
alias nohistory="cat /dev/null > ~/.bash_history && history -c && exit" # Clear your tracks
alias nscript="ls /usr/share/nmap/scripts/ | grep -i " # Search available nmap scripts
alias onlyemails='grep -E -o "\b[a-zA-Z0-9.-]+@[a-zA-Z0-9.-]+\.[a-zA-Z0-9.-]+\b"' # Extract emails from a text file
alias pnessus='/root/scripts/bashscripts/nessus/parse_nessus_xml.v24.pl -f report.nessus' # Parse your Nessus data
alias rain="/root/scripts/bashscripts/focus/rain/./rain.sh" # Relax with rain sounds and ASCII art
alias searchresponder='cd /root/scripts/Responder/logs; read -p "[*] Enter Username: " username; grep -a Client -A 3 Responder-Session.log | grep -a -B 3 $username' # Find hashes for a single user and hack your way through logs
alias sortip='sort -t . -k 1,1n -k 2,2n -k 3,3n -k 4,4n' # Sort a file by IP addresses
alias uptolow="tr '[:upper:]' '[:lower:]'" # Converts text to lowercase
alias vmshare="/root/Desktop/./mount-shared-folders.sh" # Mount VMware shared folders
alias vpn=/root/scripts/bashscripts/remote_testing_appliance/./vpn.sh # Start your VPN in seconds
alias webserver='python -m SimpleHTTPServer 8080' # Quickly host files with a local webserver
alias whatismyip="/root/scripts/bashscripts/remote_testing_appliance/whatismyip.sh" # Find your public IP
alias whichport="cat /etc/services | grep -i " # Find a service associated to a port
alias windirstat='ncdu' # Identify what files are consuming the most space on your system with a TUI
alias xclip='xclip -selection clipboard' # Copy output to your clipboard
